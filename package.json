{
  "name": "resume",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://oahehc.github.io/resume",
  "scripts": {
    "start": "PORT=3002 react-scripts start",
    "prebuild": "echo $(git log --pretty=format:'{%n  \"date\": \"%at\"%n}' -1) > src/Assets/release.json",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "tsc": "tsc",
    "prettier": "prettier \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)\"",
    "lint": "eslint src --ext .js,.ts,.tsx",
    "validate": "npm run lint && npm run prettier -- --list-different",
    "precommit": "npm run tsc && lint-staged",
    "postinstall": "patch-package"
  },
  "lint-staged": {
    "*.+(js|ts|tsx)": [
      "npm run lint"
    ],
    "*.+(js|ts|tsx|json|yml|yaml|css|less|scss|md|mdx|graphql)": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "parser": "typescript-eslint-parser",
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.8.4",
    "@types/styled-components": "^4.1.5",
    "classnames": "^2.2.6",
    "grommet": "^2.2.1",
    "grommet-icons": "^4.1.0",
    "grommet-styles": "^0.2.0",
    "idx": "^2.5.2",
    "is_js": "^0.9.0",
    "logrocket": "^0.6.19",
    "logrocket-react": "^3.0.0",
    "normalize.css": "^8.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.0",
    "react-router-dom": "^5.0.0",
    "react-scripts": "2.1.3",
    "styled-components": "^4.1.3",
    "typescript": "^3.5.2"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.7",
    "@types/react-router-dom": "^4.3.4",
    "eslint-plugin-react-hooks": "^1.0.1",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "patch-package": "^5.1.1",
    "postinstall-postinstall": "^2.0.0",
    "prettier": "^1.15.3",
    "typescript-eslint-parser": "^21.0.2"
  }
}
